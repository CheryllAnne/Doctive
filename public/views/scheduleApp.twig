<div class="col-md-12" >

    <div class="card">

        <div class="card-header">
            <strong>Schedule Appointment</strong>
        </div>
        {% for i in range(0,0) %}

        <div class="card-body card-block">
            <form action="/v1/patient/app" method="post" enctype="multipart/form-data" class="form-horizontal">
                {#                    <div class="row form-group">#}
