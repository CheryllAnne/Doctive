                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Full Name</label></div>
                    <div class="col-12 col-md-9"><input type="text" id="text-input" name="name" placeholder="Name" value="{{ patients[i].name }}" class="form-control"><small class="form-text text-muted">Patient's full name as per NRIC</small></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Identification Card No.</label></div>
                    <div class="col-12 col-md-9"><input type="text" id="text-input" name="icNo" placeholder="IC No." value="{{ patients[i].icNo }}" class="form-control"><small class="form-text text-muted">IC number without '-'</small></div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="select" class=" form-control-label">Doctor Name</label></div>
                    <div class="col-12 col-md-9">
                        <select name="drName" id="select" class="form-control">
                            <option value="0">Please select</option>
                            <option value="Dr. One">Dr. One</option>
                            <option value="Dr. Two">Dr. Two</option>
                        </select>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="date-input" class=" form-control-label">Appointment Date</label></div>
                    <div class="col-12 col-md-9"><input type="date" id="text-input" name="date" placeholder="" class="form-control"><small class="form-text text-muted"></small></div>
                </div>

                <div class="row form-group">
