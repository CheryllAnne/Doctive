{#                        <label for="default-picker">Default Time Picker</label>#}
{#                    </div>#}
                    <div class="col col-md-3"><label for="input_starttime">Appointment Time</label></div>
                    <div class="col-12 col-md-9">
                        <select name="time" id="select" class="form-control">
                            <option value="0">Select Time Slot</option>
                            <option value="9.00am">9.00 am</option>
                            <option value="11.00am">11.00 am</option>
                            <option value="2.00pm">2.00 pm</option>
