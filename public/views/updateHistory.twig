                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Full Name</label></div>
                    <div class="col-12 col-md-9"><input type="text" id="text-input" name="name" placeholder="Name" class="form-control"><small class="form-text text-muted">Patient's full name as per NRIC</small></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Identification Card No.</label></div>
                    <div class="col-12 col-md-9"><input type="text" id="text-input" name="icNo" placeholder="IC No." class="form-control"><small class="form-text text-muted">IC number without '-'</small></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="date-input" class=" form-control-label">Last Visit</label></div>
                    <div class="col-12 col-md-9"><input type="date" id="text-input" name="last_visit" placeholder="" class="form-control"><small class="form-text text-muted"></small></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="date-input" class=" form-control-label">Current Visit</label></div>
                    <div class="col-12 col-md-9"><input type="date" id="text-input" name="current_visit" placeholder="" class="form-control"><small class="form-text text-muted"></small></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="select" class=" form-control-label">Patient Status</label></div>
                    <div class="col-12 col-md-9">
                        <select name="status" id="select" class="form-control">
                            <option value="0">Please select</option>
                            <option value="Outpatient">Outpatient</option>
                            <option value="Inpatient">Inpatient</option>
                        </select>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="email-input" class=" form-control-label">Medical Card No.</label></div>
                    <div class="col-12 col-md-9"><input type="text" id="text-input" name="medCardNo" placeholder="" class="form-control"></div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="textarea-input" class=" form-control-label">Doctor's Comments</label></div>
                    <div class="col-12 col-md-9"><textarea name="comment" id="textarea-input" rows="5" placeholder=" " class="form-control"></textarea></div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3"><label for="textarea-input" class=" form-control-label">Prescriptions</label></div>
                    <div class="col-12 col-md-9"><textarea name="prescription" id="textarea-input" rows="5" placeholder=" " class="form-control"></textarea></div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> Submit
                    </button>
                </div>

            </form>
        </div>
