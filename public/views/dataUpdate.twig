<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Doctive</title>
    <meta name="description" content="Doctive">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="favicon.ico">


    <link rel="stylesheet" href="/res/css/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/res/css/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/res/css/themify-icons/css/themify-icons.css">
    <link rel="stylesheet" href="/res/css/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="/res/css/selectFX/css/cs-skin-elastic.css">

    <link rel="stylesheet" href="/res/css/style.css">

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
</head>

<body>

<!-- Left Panel -->

<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">

        <div class="navbar-header">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand" href="/"><img src="images/logo.png" alt="Doctive"></a>
            <a class="navbar-brand hidden" href="./"><img src="images/logo2.png" alt="Logo"></a>
        </div>
        <div id="main-menu" class="main-menu collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="/analystHome"> <i class="menu-icon fa fa-home"></i>Dashboard </a>
                </li>
                <h3 class="menu-title">Behabit - Doctive</h3><!-- /.menu-title -->
                <li>
                    <a href="/v1/patient/behabitUsers"> <i class="menu-icon ti-user"></i>List of Users </a>
                </li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </nav>
</aside><!-- /#left-panel -->

{% if result == true  %}
    <div class="alert  alert-success alert-dismissible fade show" role="alert">
        <strong>Success</strong>{{ session.add }}
    </div>
{% else %}
    <div class="alert  alert-info alert-dismissible fade show" role="alert">
        <strong>{{ session.error }}</strong>
    </div>
{% endif %}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <strong>Behabit-Doctive Data Update</strong>
        </div>

{#                <div class="row form-group">#}
{#                    <div class="col col-md-3"><label for="email-input" class=" form-control-label">Age</label></div>#}
{#                    <div class="col-12 col-md-9"><input type="text" id="text-input" name="age" placeholder="" class="form-control"><small class="form-text text-muted">Age in this current year</small></div>#}
{#                </div>#}

        {% for i in range(0,0) %}

        <div class="card-body card-block">
            <form action="/v1/analyst/image/{{ bUser[i].behabitID }}" method="post" enctype="multipart/form-data" class="form-horizontal">
                <div class="row form-group">
                    <div class="col col-md-3"><label for="text-input" class=" form-control-label">Behabit Username</label></div>
                    <div class="col-12 col-md-9"><input type="text" id="text-input" name="name" placeholder="Name" value="{{ bUser[i].name }}" class="form-control"></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="textarea-input" class=" form-control-label">Analysis Description</label></div>
                    <div class="col-12 col-md-9"><textarea name="description" id="textarea-input" rows="5" placeholder="Description" class="form-control"></textarea></div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3"><label for="file-input" class=" form-control-label">File input</label></div>
                    <div class="col-12 col-md-9"><input type="file" id="file-input" name="file_input" class="form-control-file"></div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary btn-sm" style="background: #0c5460; color: #fff; font-weight: normal; padding: auto">
                        <i class="fa fa-dot-circle-o"></i> Upload
                    </button>
                </div>
            </form>
        </div>

        {% endfor %}

    </div>

</div>
{#{% endblock %}#}
</body>